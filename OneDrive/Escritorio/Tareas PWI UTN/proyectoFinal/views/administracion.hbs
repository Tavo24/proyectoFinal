
{{!-- Mostramos los Productos en la Tabla --}}
<div class="container">
    <div class="text-center m-5 titulolista">
        <h2> Lista de Productos</h2>
        <a href="javascript:void(0);" id="add" class="btn btn-info">Agregar</a>    
    </div>
    
    <table class="table table-striped" id="mytable">
        <thead>
            <tr>
                <th> Productos ID</th>
                <th> nombProducto </th>
                <th> imagen </th>
                <th> color </th>
                <th> stock </th>
                <th> Acciones </th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
                <tr>
                    <td> {{ idProducto }}</td>
                    <td> {{ nombProducto }}</td>
                    <td><img src="{{ imagen }}" height="50" /></td>
                    <td> {{ color }}</td>
                    <td> {{ stock }}</td>
                    <td>
                        <a href="javascript:void(0);" class="btn btn-info edit" data-id="{{idProducto}}" data-nombproducto="{{nombProducto}}" data-imagen="{{imagen}}" data-color="{{color}}" data-stock="{{stock}}">Editar</a>    
                        <a href="javascript:void(0);" class="btn btn-danger delete" data-id="{{ idProducto}}">Borrar</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <hr/>
    <div class="text-center m-5">
        <h2> Listado de formularios </h2>
    </div>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th> idFormulario </th>
                <th> nombCompleto </th>
                <th> email </th>
                <th> tipo </th>
                <th> mensaje </th>
                <th> telefono </th>
            </tr>
        </thead>
        <tbody>
            {{#each formularios}}
                <tr>
                    <td> {{ idFormulario }} </td>
                    <td> {{ nombCompleto }} </td>
                    <td> {{ email }} </td>
                    <td> {{ tipo }} </td>
                    <td> {{ mensaje }} </td>
                    <td> {{ telefono }} </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>


