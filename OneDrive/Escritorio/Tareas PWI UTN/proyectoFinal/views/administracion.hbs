<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>
    function readFile(input, modal) {
        if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
            var filePreview = document.createElement('img');
            filePreview.id = 'file-preview';
            //e.target.result contents the base64 data from the image uploaded
            filePreview.src = e.target.result;
            var previewZone = document.getElementById('file-preview-zone');
            previewZone.appendChild(filePreview);
            if(modal == 'edit'){
                $('#imagenBaseEdit').val(e.target.result);
            }else {
                $('#imagenBaseAdd').val(e.target.result);
            }
        }
        reader.readAsDataURL(input.files[0]);
        }
    }
    var fileUploadAdd = document.getElementById('file-uploadAdd');
    var fileUpload = document.getElementById('file-upload');
    fileUploadAdd.onchange = function (e) {
        readFile(e.srcElement, 'add');
    }
    fileUpload.onchange = function (e) {
        readFile(e.srcElement, 'edit');
    }
</script>
<script>
    $(document).ready(function(){
        $('#add').click(function() {
            $('#AgregarModal').modal('show');
        })
        //Mostrar datos al modal para editar registro
        $('#mytable').on('click', '.edit', function(){
            let idProducto = $(this).data('id');
            let producto_nombProducto = $(this).data('nombproducto');
            let producto_imagen = $(this).data('imagen');
            let producto_color = $(this).data('color');
            let producto_stock = $(this).data('stock');
            $('#EditModal').modal('show');
            $('#idProducto').val(idProducto);
            $('#producto_nombProducto').val(producto_nombProducto);
            $('#producto_color').val(producto_color);
            $('#producto_stock').val(producto_stock);
            $('#file-upload').val(producto_imagen);
        })
        // Modal DELETE     
        $('#mytable').on('click', '.delete', function(){
            let idProducto = $(this).data('id');
            $('#DeleteModal').modal('show');
            $('.idProducto2').val(idProducto);
        })
    })
</script>
